<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/background_login5">

    <TextView
        android:id="@+id/welcome_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="30dp"
        android:text="Jinwon Social"
        android:textColor="#f15156"
        android:textSize="30dp"
        android:gravity="center"
        android:fontFamily="@font/ddangsbold"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:id="@+id/id_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/welcome_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:fontFamily="@font/ddangsmedium"
            android:textColor="@color/bage"
            android:background="@drawable/round"
            android:padding="5dp">
        </TextView>

        <EditText
            android:textColorHint="#aaaaaa"
            android:textColor="@color/bage"
            android:id="@+id/idEdit"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/ddangslight"
            android:padding="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:hint=" 아이디를 입력하세요."/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/pw_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/id_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/bage"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="비밀번호"

            android:fontFamily="@font/ddangsmedium"
            android:background="@drawable/round">
        </TextView>

        <EditText
            android:textColor="@color/bage"
            android:id="@+id/passwordEdit"
            android:fontFamily="@font/ddangslight"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:hint=" 비밀번호를 입력하세요."
            android:textColorHint="#aaaaaa"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pw_layout">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginBtn"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:layout_margin="10dp"
            android:text="로그인"
            android:fontFamily="@font/ddangsmedium"
            android:backgroundTint="@color/TeaGreen"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/memberBtn"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:layout_margin="10dp"
            android:fontFamily="@font/ddangsmedium"
            android:text="회원가입"
            android:backgroundTint="@color/TeaGreen"/>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>