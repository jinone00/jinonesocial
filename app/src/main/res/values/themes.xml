<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JinoneSocial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleText16">
        <item name="android:textSize">16dp</item>
        <item name="font">@font/thejamsilbold</item>
    </style>

    <style name="TitleText22">
        <item name="android:textSize">22dp</item>
        <item name="font">@font/thejamsilbold</item>
    </style>

    <style name="TitleText10">
        <item name="android:textSize">10dp</item>
        <item name="font">@font/thejamsilbold</item>
    </style>

    <style name="TitleText13">
        <item name="android:textSize">13dp</item>
        <item name="font">@font/thejamsilbold</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>